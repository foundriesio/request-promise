{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "always",
                "bracketSpacing": false,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "none"
            }
        ],
        "require-jsdoc": "off",
        "no-unused-vars": "error",
        "no-undef": "error"
    }
}
