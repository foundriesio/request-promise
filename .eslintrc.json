{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "node",
    "security",
    "promise"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:security/recommended",
    "plugin:promise/recommended"
  ],
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-unused-vars": "error",
    "no-undef": "error",
    "block-scoped-var": "error",
    "require-jsdoc": "off",
    "semi": [
      "error", "always"
    ],
    "quotes": [
      "error", "single"
    ]
  }
}
